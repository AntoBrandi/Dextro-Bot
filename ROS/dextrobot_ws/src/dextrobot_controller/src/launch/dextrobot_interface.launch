<launch>

    <!-- Launch the ros interface with Arduino -->
    <node pkg="rosserial_python" type="serial_node.py" name="imu_watcher" output="screen">
        <param name="port" value="/dev/ttyACM0"/>
    </node>

    <!-- Launch the IMU message converter from string to sensor_msgs/Imu -->
    <node pkg="dextrobot_controller" type="imu_raw_subscriber.py" name="imu_converter" respawn="true" output="screen"/>

    <!-- Launch the Range message converter from string to sensor_msgs/Range -->
    <node pkg="dextrobot_controller" type="sonar_raw_subscriber.py" name="sonar_converter" respawn="true" output="screen"/>

    <!-- Launch the Twist message converter from Twist to Vector3 -->
    <node pkg="dextrobot_controller" type="cmd_vel_converter.py" name="cmd_vel_converter" respawn="true" output="screen"/>

</launch>